<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dip"
    android:layout_marginRight="7dip"
    card_view:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/item"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <TextView
            android:id="@+id/date_and_time"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/invoice_no"
            android:textColor="@color/heading_color"
            android:textStyle="bold"
            android:textSize="@dimen/titile_invoice"
            android:text="Sun,Nov 18, 08:10 PM" />


                <TextView
                    android:id="@+id/spending"
                    android:layout_width="match_parent"
                    android:paddingRight="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_height="20dp"
                    android:maxLines="1"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:textColor="@color/heading_color"
                    android:textSize="@dimen/titile_invoice"
                    android:textStyle="bold"
                    android:text="35$" />

            </LinearLayout>

        <TextView
            android:id="@+id/invoice_no"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Bill No : CA86360"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/heading_color"
            />

            <TextView
                android:id="@+id/store_address"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop N-4-5 Ground Floor, Pan oasis market, Sector 70, Noida"
                android:textSize="@dimen/store_address"
                 />



        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>