<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="8dp">
    <android.support.v7.widget.CardView
     android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/invoice_color"
       android:layout_margin="4dp"
        app:cardCornerRadius="6dp"
          app:cardElevation="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:textColor ="@color/heading_color"
                android:text="DREAM VALLEY STORE"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </TableRow>


        <TableRow
            android:layout_marginTop="5dp">
            <TextView
                android:gravity="center"
                android:id="@+id/merchant_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_column="1"
                android:text="Shop N-4-5 Ground Floor, Pan oasis market,sector 70,Noida(UP) 999913064" />

        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            >
            <TextView
                android:gravity="center"
                android:id="@+id/gst_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_column="1"
                android:text="GST : 09AAFCPO614H3ZK" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/heading_color"/>


        <TableRow
            android:padding="10dp"
            >
            <TextView
                android:gravity="left"
                android:id="@+id/bill_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_column="1"
                android:text="Bill No: CA86360 :" />
        </TableRow>
        <TableRow
            android:padding="10dp"
            >
            <TextView
                android:gravity="left"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_column="1"
                android:text="Date : 21/10/18" />
        </TableRow>
        <TableRow
            android:padding="10dp"
            >
            <TextView
                android:gravity="left"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_column="1"
                android:text="Time : 18:00 PM" />
        </TableRow> </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            >
        <TableRow
            android:background="@color/item_heading_bg_color"
            android:textStyle="bold"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_weight="0.4"
                android:text="Description" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_weight="0.2"
                android:text="Quantity"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_weight="0.2"
                android:text="Rate" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_color"
                android:layout_weight="0.2"
                android:text="Amount" />
        </TableRow>


            <TableRow
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heading_color"
                    android:layout_weight="0.4"
                    android:text="AMUL Tonned 1 ltr Milk  From original Cow" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heading_color"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:text="2" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heading_color"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="21.00" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heading_color"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:text="21.00" />
            </TableRow>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/heading_color"/>
            <TableRow
                android:layout_marginTop="8dp"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heading_color"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="Subtotal: " />

            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heading_color"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="VAT: " />

            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heading_color"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="Discount: " />

            </TableRow>
            <TableRow
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:background="@color/heading_color"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_column="3"
                    android:padding="4dp"
                    android:layout_weight="1"
                    android:text="Total" />

            </TableRow>

        </TableLayout>
</LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>